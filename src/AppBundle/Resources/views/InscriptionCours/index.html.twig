{% extends 'AppBundle:Cours:listeCours.html.twig' %} {% block content %}
<h1>Inscription à un cours</h1>

{% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
<ul class="list-inline">
    <li>
        <p>Veuillez confirmer votre inscription</p>
        <a href="{{path('app_inscriptionCours_add')}}" class="btn btn-sm btn-default">
                Confirmer
        </a>

        <a href="{{path('app_inscriptionCours_cancel')}}" class="btn btn-sm btn-default">
                Annuler
        </a>
    </li>
</ul>
<ul>
    <li>
        <a href="{{path('app_cours_liste')}}" class="btn btn-sm btn-default">
                Retour à la liste des cours
        </a>
    </li>

</ul>
{% else %}
<li>
    <a class="navbar-brand" href="{{ path('fos_user_security_login') }}">
        <span class="glyphicon glyphicon-log-in"></span> {{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a>
</li>
{% endif %} {% endblock %}