{% extends '::base.html.twig' %} 
{% block content %}
<h1>Inscription à un cours</h1>

{% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
        <p>{{ 'Bonjour'}} {{ user.nom }} {{ user.prenom }}</p>

    <p>Veuillez confirmer votre inscription</p>

<div class="col-sm-11">
    <b>{{cours.typeDanse}}  {{cours.niveau}}</b>
    <br/> {{cours.dateCours|date('d-m-Y')}} - 
        {{cours.heureDebut|date('H:i')}}-
        {{cours.heureFin|date('H:i')}} 
        Salle {{cours.salle}}

</div>

<a href="{{path('app_inscriptionCours_add',{id:cours.id})}}" class="btn btn-sm btn-default">Confirmer</a>
<a href="{{path('app_cours_liste')}}" class="btn btn-sm btn-default">Annuler</a>

{% else %}
<p>Veuillez vous connecter ou créer votre compte </p>

    <a class="navbar-brand" href="{{ path('fos_user_security_login') }}">
        <span class="glyphicon glyphicon-log-in"></span>
            {{ 'layout.login'|trans({}, 'FOSUserBundle') }}
    </a>

{% endif %}
{% endblock %}

