{% extends '::base.html.twig' %}

{% block content %}
<h1>Voici votre liste de contacts</h1>
{# Pour chaque coours #}
{% for cours in cours %}
<div class="row cours">
    <div class="col-sm-11">
        <div class="panel panel-default">
            <div class="panel-body">
				{{cours.name}}  {{cours.niveau}} 
                {{cours.dateCours}} - {{cours.heureDebut}}-{{cours.heureFin}} Salle {{cours.salle}}

            </div>
        </div>
    </div>
    <div class="col-sm-1">
        <p>
            {# Bouton d'ajout #}
            <a href="{{ path('app_cours_add') }}" class="btn btn-xs btn-warning">
                <span class="glyphicon glyphicon-pencil"></span>
            </a>
            {# Bouton d'edition #}
            <a href="{{ path('app_cours_edit') }}" class="btn btn-xs btn-warning">
                <span class="glyphicon glyphicon-pencil"></span>
            </a>
            {# Bouton de suppression #}
            <a href="{{path('app_cours_liste')}}" class="btn btn-xs btn-danger">
                <span class="glyphicon glyphicon-trash"></span>
            </a>
        </p>
    </div>
</div>
{% endfor %}
  {% endblock %}