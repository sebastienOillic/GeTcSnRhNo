{% extends '::base.html.twig' %} {% block content %}

<div class="col-sm-11">
    <h1>Nos prochains cours</h1>
</div>
<div class="col-sm-1">
    {% if is_granted("ROLE_RESPONSABLE") %}
        {# Bouton d'ajout #}
        <a href="{{ path('app_cours_add') }}" class="btn btn-xs btn-success">
            <span class="glyphicon glyphicon-pencil"></span>
        </a>
    {% endif %}
</div>

{# Pour chaque cours #}
{% set number = 0 %}
{% for cours in cours %}
<div class="row cours">
    <div class="col-sm-11">
        {% set number = number+1 %}
        {% if number %2 == 0 %}
        <div class="bouton_cours yellow">
            {% else %}
            <div class="bouton_cours orange">

                {% endif %}
                <a href="{{path('app_inscriptionCours_index', {id:cours.id})}}">
                    <div class = "titrecours">{{cours.typeDanse|upper}} {{cours.niveau|capitalize}}</div>
                    <div class = "detailscours"> {{cours.dateCours|date("d/m/Y", "Europe/Paris")}}  de {{cours.heureDebut|date('H:i')}} Ã  {{cours.heureFin|date('H:i')}} - Salle {{cours.salle}}</div>
                </a>
            </div>

        </div>


        {% if is_granted("ROLE_RESPONSABLE") %}
            <div class="col-sm-1">
                <p>
                    {# Bouton d'ajout #}
                    <a href="{{ path('app_cours_add') }}" class="btn btn-xs btn-warning">
                        <span class="glyphicon glyphicon-pencil"></span>
                    </a>
                    {# Bouton d'edition #}
                    <a href="#" class="btn btn-xs btn-warning">
                        <span class="glyphicon glyphicon-pencil"></span>
                    </a>
                    {# Bouton de suppression #}
                    <a href="{{path('app_cours_liste')}}" class="btn btn-xs btn-danger">
                        <span class="glyphicon glyphicon-trash"></span>

                    </a>
                </p>
            </div>
        {% endif %}
    </div>
</div>
    {% endfor %}
    {% endblock %}



