body {
    padding-top: 50px;
    padding-bottom: 20px;
    background-color: #FFF7CC;
}

form .control-label.required:after {
    position: absolute;
    right: 6px;
    display: inline-block;
    content: '*';
    color: red;
    font-weight: bold;
}

form .checkbox label.required:after {
    margin-left: 6px;
    display: inline-block;
    content: '*';
    color: red;
    font-weight: bold;
}

.jumbotron {
    padding: 30px 0;
}
#titreAccueil h1 {
    font-size: 36px;
    font-family: "Dancing Script";
    color: #8A0507;
}



