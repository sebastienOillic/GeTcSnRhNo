{% extends '::base.html.twig' %}

{% block content%}
    <h1>Avis list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Commentaire</th>
                <th>Slug</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for avi in avis %}
            <tr>
                <td><a href="{{ path('avis_show', { 'id': avi.id }) }}">{{ avi.id }}</a></td>
                <td>{{ avi.commentaire }}</td>
                <td>{{ avi.slug }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('avis_show', { 'id': avi.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('avis_edit', { 'id': avi.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('avis_new') }}">Create a new avi</a>
        </li>
    </ul>
{% endblock %}
